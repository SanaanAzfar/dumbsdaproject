<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:id="gridPane" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.DiscussionFormController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Vgap>
        <Insets bottom="10"/>
    </Vgap>
    <Hgap>
        <Insets right="10"/>
    </Hgap>

    <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Message:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextArea fx:id="messageArea" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.rowSpan="2"/>

    <Button text="Submit" onAction="#handleSubmitButtonAction" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <Button text="Reset" onAction="#handleResetButtonAction" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
</GridPane>
